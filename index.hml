<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cálculo de Salário com Horas Extras</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            padding: 20px;
            background-color: #f4f4f4;
        }
        h1 {
            text-align: center;
            color: #333;
        }
        label {
            display: block;
            margin-top: 10px;
        }
        input {
            padding: 5px;
            margin-top: 5px;
            width: 200px;
        }
        button {
            background-color: #4CAF50;
            color: white;
            border: none;
            padding: 10px 15px;
            cursor: pointer;
            margin-top: 15px;
        }
        button:hover {
            background-color: #45a049;
        }
        .result {
            margin-top: 20px;
            padding: 10px;
            background-color: #e7e7e7;
            border-radius: 5px;
        }
        .result span {
            font-weight: bold;
        }
    </style>
</head>
<body>
    <h1>Cálculo de Salário com Horas Extras</h1>
    <form id="calculoForm">
        <label for="salario">Salário Base (R$):</label>
        <input type="number" id="salario" value="1750" min="0" step="0.01" required>

        <label for="horasExtras50">Horas Extras 50% (h):</label>
        <input type="number" id="horasExtras50" value="0" min="0" step="0.01" required>

        <label for="horasExtras100">Horas Extras 100% (h):</label>
        <input type="number" id="horasExtras100" value="0" min="0" step="0.01" required>

        <label for="jornadaMensal">Jornada Mensal (h):</label>
        <input type="number" id="jornadaMensal" value="200" min="0" step="0.01" required>

        <label for="domingosFeriados">Domingos e Feriados (dias):</label>
        <input type="number" id="domingosFeriados" value="0" min="0" step="1" required>

        <label for="diasUteis">Dias Úteis (dias):</label>
        <input type="number" id="diasUteis" value="22" min="0" step="1" required>

        <button type="button" onclick="calcular()">Calcular</button>
    </form>

    <div id="resultados" class="result" style="display: none;">
        <p><span>Valor Total por Horas Extras 50%:</span> R$ <span id="totalExtras50">0,00</span></p>
        <p><span>Valor Total por Horas Extras 100%:</span> R$ <span id="totalExtras100">0,00</span></p>
        <p><span>Valor Total por DSR sobre Horas Extras:</span> R$ <span id="totalDSR">0,00</span></p>
        <p><span>Valor Total (Horas Extras + DSR):</span> R$ <span id="totalGeral">0,00</span></p>
    </div>

    <script>
        function calcular() {
            // Obtendo os valores dos inputs
            const salarioBase = parseFloat(document.getElementById('salario').value);
            const horasExtras50 = parseFloat(document.getElementById('horasExtras50').value);
            const horasExtras100 = parseFloat(document.getElementById('horasExtras100').value);
            const jornadaMensal = parseFloat(document.getElementById('jornadaMensal').value);
            const domingosFeriados = parseInt(document.getElementById('domingosFeriados').value);
            const diasUteis = parseInt(document.getElementById('diasUteis').value);

            // Validando se os valores são positivos
            if (salarioBase < 0 || horasExtras50 < 0 || horasExtras100 < 0 || jornadaMensal <= 0 || domingosFeriados < 0 || diasUteis <= 0) {
                alert("Por favor, insira valores válidos.");
                return;
            }

            // Calculando o valor da hora base
            const valorHora = salarioBase / jornadaMensal;

            // Calculando os valores das horas extras
            const valorExtras50 = horasExtras50 * valorHora * 1.5;
            const valorExtras100 = horasExtras100 * valorHora * 2;

            // Calculando o DSR sobre as horas extras
            const totalExtras = valorExtras50 + valorExtras100;
            const dsrSobreExtras = totalExtras * (domingosFeriados / diasUteis);

            // Calculando o valor total (horas extras + DSR)
            const totalGeral = totalExtras + dsrSobreExtras;

            // Exibindo os resultados
            document.getElementById('totalExtras50').textContent = valorExtras50.toFixed(2);
            document.getElementById('totalExtras100').textContent = valorExtras100.toFixed(2);
            document.getElementById('totalDSR').textContent = dsrSobreExtras.toFixed(2);
            document.getElementById('totalGeral').textContent = totalGeral.toFixed(2);

            // Exibindo os resultados
            document.getElementById('resultados').style.display = 'block';
        }
    </script>
</body>
</html>

